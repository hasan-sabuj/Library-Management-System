<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="780.0" prefWidth="1205.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryassistant.signup.UserHomepageController">
   <children>
      <VBox layoutY="-2.0" prefHeight="104.0" prefWidth="603.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="90.0" prefWidth="513.0" text="User Homepage" textFill="#0db90d">
               <font>
                  <Font name="System Bold" size="38.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <TableView fx:id="bookInfoTable" layoutX="193.0" layoutY="113.0" prefHeight="497.0" prefWidth="1011.0">
        <columns>
          <TableColumn fx:id="titleColumn" prefWidth="234.0" text="Title" />
          <TableColumn fx:id="IDColumn" prefWidth="158.0" text="ISBN" />
            <TableColumn fx:id="AuthorColumn" prefWidth="235.0" text="Author" />
            <TableColumn fx:id="PublisherColumn" prefWidth="201.0" text="Publisher" />
            <TableColumn fx:id="numCopies" prefWidth="180.0" text="No of Copies" />
        </columns>
      </TableView>
      <TextField fx:id="searchField" layoutX="4.0" layoutY="210.0" prefHeight="40.0" prefWidth="185.0" promptText="Search" />
      <RadioButton fx:id="rb1ID" layoutX="18.0" layoutY="145.0" mnemonicParsing="false" onAction="#radioSelect" text="Title">
         <toggleGroup>
            <ToggleGroup fx:id="Mygroup" />
         </toggleGroup>
      </RadioButton>
      <Label layoutX="18.0" layoutY="118.0" prefHeight="21.0" prefWidth="98.0" text="Search by" textFill="#168319">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <RadioButton fx:id="rb2Author" layoutX="18.0" layoutY="175.0" mnemonicParsing="false" onAction="#radioSelect" text="Author" toggleGroup="$Mygroup" />
      <Button fx:id="searchButton" layoutX="14.0" layoutY="259.0" mnemonicParsing="false" onMouseClicked="#searchAction" prefHeight="46.0" prefWidth="156.0" text="Search" textFill="#289a17">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="refreshButton" layoutX="15.0" layoutY="325.0" mnemonicParsing="false" onMouseClicked="#refreshAction" prefHeight="46.0" prefWidth="156.0" text="Refresh" textFill="#21a43e">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="IssueBooks" layoutX="17.0" layoutY="390.0" mnemonicParsing="false" onMouseClicked="#issuebooksAction" prefHeight="46.0" prefWidth="156.0" text="Issue Books" textFill="#189a29">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
      <Button layoutX="19.0" layoutY="456.0" mnemonicParsing="false" onMouseClicked="#showissuedAction" prefHeight="46.0" prefWidth="156.0" text="Show issued books" textFill="#289e36">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="19.0" layoutY="576.0" mnemonicParsing="false" onMouseClicked="#logoutAction" prefHeight="46.0" prefWidth="156.0" text="Log out" textFill="#2e9e3b">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
      <Button layoutX="21.0" layoutY="518.0" mnemonicParsing="false" onMouseClicked="#returnBookAction" prefHeight="40.0" prefWidth="156.0" text="Return Book" textFill="#26a83c">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
