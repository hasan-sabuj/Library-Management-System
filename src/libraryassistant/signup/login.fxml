<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="518.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryassistant.signup.LoginController">
   <children>
      <VBox layoutX="16.0" layoutY="24.0" prefHeight="349.0" prefWidth="486.0">
         <children>
            <TextField fx:id="emailField" prefHeight="59.0" prefWidth="446.0" promptText="Email">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="40.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passField" prefHeight="51.0" prefWidth="445.0" promptText="Password">
               <VBox.margin>
                  <Insets bottom="28.0" left="20.0" right="21.0" top="10.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="loginbutton" mnemonicParsing="false" onMouseClicked="#loginbuttonAction" prefHeight="31.0" prefWidth="464.0" text="Login">
               <font>
                  <Font size="19.0" />
               </font>
               <VBox.margin>
                  <Insets left="140.0" right="140.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="notification" prefHeight="30.0" prefWidth="125.0" textFill="#dd1212" />
            <Button fx:id="forgotpassbutton" mnemonicParsing="false" onMouseClicked="#ForgotpassAction" prefHeight="50.0" prefWidth="206.0" text="Forgot Password?">
               <VBox.margin>
                  <Insets left="140.0" right="140.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
